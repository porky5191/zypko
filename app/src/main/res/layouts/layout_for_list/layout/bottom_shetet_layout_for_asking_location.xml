<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_bs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue_tez"
        android:text="Enter which Station you need food "
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="19sp"/>


    <EditText
        android:id="@+id/edit_text_bottom_sheet_location"
        android:layout_below="@id/textview_bs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="40dp"
        android:background="@drawable/station_search_edittext"
        android:hint="location"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_bottom_sheet_location"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite"
        android:background="@color/color_google_green"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"/>





</RelativeLayout>