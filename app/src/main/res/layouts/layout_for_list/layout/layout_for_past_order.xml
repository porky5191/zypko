<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID#"
                android:textColor="@color/color_text_color"
                android:textSize="18sp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tv_order_table_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3322145676"
                android:textColor="@color/color_text_color"
                android:textSize="18sp"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/delete_imageView_past_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rubbish_bin"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_account_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Dynesti"
                android:textColor="@color/color_text_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <TextView
                android:id="@+id/tv_user_account_hotel_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gandhi Basti, Saraniya Hills"
                android:textColor="@color/color_text_color"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At "
                android:textColor="@color/color_text_color"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                />

            <TextView
                android:id="@+id/tv_user_account_station_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="Paltan Bazar Station"
                android:textColor="@color/color_text_color"
                android:textSize="15sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textColor="@color/color_text_color"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <TextView
                android:id="@+id/tv_user_account_delivered_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textColor="@color/color_text_color"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textColor="@color/color_text_color"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_user_account_delivered_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/01/2019"
                android:textColor="@color/color_text_color"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time :  "
                android:textColor="@color/color_text_color"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/tv_user_account_delivered_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.09"
                android:textColor="@color/color_text_color"
                android:paddingRight="10dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">


                <TextView
                    android:id="@+id/tv_user_account_total_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/color_text_color"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" items"
                    android:textColor="@color/color_text_color"
                    android:paddingRight="10dp"
                    />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_of_separator"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rupee"
                    android:textColor="@color/color_text_color"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:id="@+id/tv_user_account_paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/color_text_color"
                    android:paddingRight="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="["
                    android:textColor="@color/color_text_color"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid via "
                    android:textColor="@color/color_text_color"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:id="@+id/tv_user_account_paid_via_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cash"
                    android:textColor="@color/color_text_color"
                    android:paddingRight="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="]"
                    android:textColor="@color/color_text_color"
                    android:textSize="15sp"
                    />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>