<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Forgot Password"
        app:titleTextColor="@color/colorBlue_tez"/>


    <TextView
        android:id="@+id/tv_forgot_pass_enter_phn_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your registered phone number"
        android:layout_below="@id/toolbar_forgot_password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:textColor="@color/color_google_blue"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/et_forgot_password_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_forgot_pass_enter_phn_number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Phone Number"
        android:textColorHint="@color/color_google_blue"
        app:backgroundTint="@color/colorBlue_tez"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:inputType="number"
        android:maxLength="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />


    <Button
        android:id="@+id/btn_forgot_password_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_forgot_password_phone_no"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite"
        android:background="@drawable/background_for_or"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/progress_bar_fot_got_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_forgot_password_submit"
        android:layout_marginTop="40dp"
        android:indeterminateTint="@color/colorBlue_tez_dark"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />



</RelativeLayout>