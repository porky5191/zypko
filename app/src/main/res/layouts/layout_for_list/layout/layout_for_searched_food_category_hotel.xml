<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/imageview_of_searched_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="9"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:transitionName="fragment_transition"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_name_of_searched_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="25sp"
                    android:textColor="@color/colorFloating_text_color"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    style="@style/Food_name_textview"
                    />

                <TextView
                    android:id="@+id/textview_category_of_searched_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chinese"
                    android:textSize="18sp"
                    android:textColor="@color/colorFloating_text_color"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    style="@style/Food_name_textview"
                    />

                <TextView
                    android:id="@+id/textview_no_of_items_of_searched_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of items : 19"
                    android:textSize="18sp"
                    android:textColor="@color/colorFloating_text_color"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    style="@style/Food_name_textview"
                    />


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>