<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_new_password_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="New Password"
        app:titleTextColor="@color/colorBlue_tez"/>

    <TextView
        android:id="@+id/tv_enter_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_new_password_activity"
        android:text="Enter new password"
        android:textSize="15sp"
        android:textColor="@color/color_text_color"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_enter_new_pass"
        android:text="Password should be minimum 6 - maximum 15 character"
        android:textSize="12sp"
        android:textColor="@color/color_light_red"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


    <EditText
        android:id="@+id/et_new_password_password_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pass"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="New Password"
        app:backgroundTint="@color/colorBlue_tez"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:inputType="textPassword"
        android:maxLength="15"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />



    <EditText
        android:id="@+id/et_new_password_password_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_new_password_password_1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Conform Password"
        app:backgroundTint="@color/colorBlue_tez"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:inputType="textPassword"
        android:maxLength="15"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />


    <Button
        android:id="@+id/btn_new_password_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_new_password_password_2"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite"
        android:background="@drawable/background_for_or"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/progress_bar_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_new_password_submit"
        android:layout_marginTop="40dp"
        android:indeterminateTint="@color/colorBlue_tez_dark"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />



</RelativeLayout>